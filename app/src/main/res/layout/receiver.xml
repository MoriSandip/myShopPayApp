<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receivemsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/receiverdemo"
        android:maxLength="250"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:maxWidth="250dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="jfkghdjkghjkdhgjkdfhg fgjkfghfjkghdfjkghfjghjkghjkfghjkdfhgjkfgfhgjkfg"
        android:textColor="#0B0B0B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/receivemsg"
        app:layout_constraintEnd_toEndOf="@+id/receivemsg"
        app:layout_constraintStart_toEndOf="@+id/receivemsg"
        app:layout_constraintTop_toTopOf="@+id/receivemsg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pro_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>